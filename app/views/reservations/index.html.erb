<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Client Name</th>
      <th>Hotel</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @reservation.each do |reservation| %>
      <tr>
        <td><%= reservation.full_name %></td>
        <td><%= reservation.hotel.name + " - "+reservation.hotel.city %></td>
        <td><%= reservation.total %></td>
        <td><%= link_to 'Show', reservation %></td>
      </tr>
    <% end %>
  </tbody>
</table>