<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Client Name</th>
      <th>Hotel</th>
      <th>Number of rooms total</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @reservation.each do |reservation| %>
      <tr>
        <td><%= reservation.full_name %></td>
        <td><%= reservation.hotel.name + " - "+reservation.hotel.city %></td>
        <td><%= reservation.number_of_rooms %></td>
        <td><%= reservation.total %></td>
        <td><%= link_to 'Show', reservation, :class => 'button button-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>